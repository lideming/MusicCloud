{
    "files": ["src/main.ts"],
    "include": ["./src"],
    "compilerOptions": {
        "module": "ES2015",
        "target": "ES2015",
        "lib": ["DOM", "ES2015"],
        "moduleResolution": "Node",
        "sourceMap": true,
        "downlevelIteration": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noEmitHelpers": true
    }
}